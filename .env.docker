# =====================================================
# Docker Environment Configuration for Flarum
# Muh Dzaky Musaddaq - Docker/Deployment Engineer
# =====================================================

# Application Configuration
APP_NAME="Flarum CI/CD Pipeline"
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration (Docker Container)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=flarum
DB_USERNAME=flarum_user
DB_PASSWORD=flarum_password

# Cache Configuration (Redis Container)
CACHE_DRIVER=redis
CACHE_PREFIX=flarum_cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Session Configuration (Redis)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@flarum.local
MAIL_FROM_NAME="Flarum Forum"

# Flarum Specific Configuration
FLARUM_ADMIN_USER=admin
FLARUM_ADMIN_EMAIL=admin@flarum.local
FLARUM_ADMIN_PASSWORD=admin123
FLARUM_SITE_TITLE="Flarum CI/CD Forum"
FLARUM_SITE_DESCRIPTION="Forum with CI/CD Pipeline Implementation"

# Docker Container Configuration
CONTAINER_TIMEZONE=UTC
CONTAINER_USER=www
CONTAINER_GROUP=www

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info

# Performance Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=60
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Security Configuration
SECURITY_HEADERS_ENABLED=true
CORS_ALLOWED_ORIGINS=*